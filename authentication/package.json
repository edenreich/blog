{
  "name": "authentication-service",
  "version": "1.0.0",
  "description": "Authentication Service",
  "main": "./server.js",
  "scripts": {
    "start": "node -r module-alias/register ./src/app.js",
    "build": "tsc && cp package* build/ && cd build && npm install --production",
    "dev": "nodemon --watch 'src/**' --ext 'ts' --exec 'ts-node -r module-alias/register src/app.ts'",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "tslint './src/**/*.ts' './__tests__/**/*.ts'",
    "lint:fix": "tslint --fix './src/**/*.ts' './__tests__/**/*.ts'",
    "typeorm": "ts-node -r module-alias/register ./node_modules/.bin/typeorm --config src/database/ormconfig.ts",
    "migration": "ts-node -r module-alias/register ./node_modules/.bin/typeorm --config src/database/ormconfig.ts migration:run",
    "migration:create": "ts-node -r module-alias/register ./node_modules/.bin/typeorm --config src/database/ormconfig.ts --name",
    "migration:generate": "ts-node -r module-alias/register ./node_modules/.bin/typeorm --config src/database/ormconfig.ts migration:generate --name",
    "migration:revert": "ts-node -r module-alias/register ./node_modules/.bin/typeorm --config src/database/ormconfig.ts migration:revert"
  },
  "keywords": [
    "authentication-service"
  ],
  "author": "Eden Reich",
  "license": "MIT",
  "dependencies": {
    "@types/koa-bodyparser": "^4.3.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "module-alias": "^2.2.2",
    "pg": "^8.6.0",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/koa": "^2.13.1",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.2",
    "@types/pg": "^8.6.0",
    "@types/supertest": "^2.0.11",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts)"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    }
  },
  "_moduleAliases": {
    "@app": "./src"
  }
}
