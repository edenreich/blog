{% extends 'admin.layout.twig' %}
{% block title %}Admin - Content Create{% endblock %}
{% block header %}
<div class="row mb-2">
  <div class="col-sm-6">
    <h1>Content</h1>
  </div>
    {% include 'includes/breadcrumb.html.twig' with {'breadcrumbs': [{'name':'Content','link':'/content'},{'name':'Create','link':'/content/create'}]} %}
</div>
{% endblock %}
{% block body %}
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- Primary table start -->
      <div class="col-12 mt-5">
        {% for label, messages in app.flashes %}
          {% for message in messages %}
            <div class="alert alert-{{ label }}">
              {{ message }}
            </div>
          {% endfor %}
        {% endfor %}
        <div class="card">
          <div class="card-body">
            <h4 class="header-title">Create</h4>
            <div class="content-edit-form">
              <form action="{{ path('content_create_submit') }}" method="POST">
                <div class="form-group">
                  <label for="id">Id</label>
                  <input type="text" name="id" class="form-control" id="id" placeholder="Auto-generated" disabled>
                </div>
                <div class="form-group">
                  <label for="title">Title</label>
                  <input type="text" name="title" class="form-control" id="title" placeholder="Title..." value="{{ app.session.get('article.title') }}">
                </div>
                <div class="form-group">
                  <label for="slug">Slug</label>
                  <input type="text" name="slug" class="form-control" id="slug" placeholder="Slug..." value="{{ app.session.get('article.slug') }}">
                </div>
                <div class="form-group">
                  <label for="meta_keywords">Meta Keywords</label>
                  <input type="text" name="meta_keywords" class="form-control" id="meta_keywords" placeholder="Meta Keywords..." value="{{ app.session.get('article.meta_keywords') }}">
                </div>
                <div class="form-group">
                  <label for="meta_description">Meta Description</label>
                  <input type="text" name="meta_description" class="form-control" id="meta_description" placeholder="Meta Description..." value="{{ app.session.get('article.meta_description') }}">
                </div>
                <div class="form-group">
                  <label for="content">Content</label>
                  <textarea name="content" class="form-control" id="content" rows="50" style="resize: none">{{ app.session.get('article.content') }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">Create</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Primary table end -->
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
  window.onload = () => {
    $(() => {
      $('textarea').summernote({
        placeholder: 'Type your content...',
        tabsize: 2,
        height: 300,
      });
    });
  }
</script>
{% endblock %}